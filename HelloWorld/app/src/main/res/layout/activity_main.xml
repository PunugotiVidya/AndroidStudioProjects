<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent"
                                             tools:context=".MainActivity">
    <EditText
            android:layout_width="0dp"
            android:layout_height="57dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText2" android:layout_marginStart="36dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="36dp"
            android:hint="@string/editmsg" tools:layout_editor_absoluteY="34dp" android:autofillHints=""/>
    <Button
            android:layout_width="0dp"
            android:layout_height="68dp" tools:layout_editor_absoluteY="34dp"
            android:id="@+id/button"
            app:layout_constraintStart_toEndOf="@+id/editText2" android:layout_marginLeft="28dp"
            android:layout_marginStart="28dp" android:visibility="visible" android:text="@string/editbutt"
            android:onClick="sendMessage"/>
</android.support.constraint.ConstraintLayout>