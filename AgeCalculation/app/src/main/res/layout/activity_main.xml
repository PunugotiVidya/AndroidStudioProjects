<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="30sp"
    android:paddingTop="30sp"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" AGE  CALCULATION "
        android:textStyle="bold"
        android:textColor="#ff0000"
        android:layout_marginLeft="10sp"
        android:textSize="34sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the BIRTH DATE "
        android:textSize="28sp"
        android:textStyle="bold|italic"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="60sp"
        android:textColor="#0000ff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.48" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="DAY"
            android:layout_marginLeft="26sp"
            android:textSize="22sp"
            android:id="@+id/date"
            android:textColor="#ff00ff"
            android:textColorHint="#ff0000"
            android:textStyle="bold|italic"
            android:inputType="number"/>
        <EditText
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="MONTH"
            android:id="@+id/month"
            android:layout_marginLeft="26sp"
            android:textSize="22sp"
            android:textColor="#ff00ff"
            android:textColorHint="#ff0000"
            android:textStyle="bold|italic"
            android:inputType="number"/>
        <EditText
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="YEAR"
            android:id="@+id/year"
            android:layout_marginLeft="26sp"
            android:textSize="22sp"
            android:textColor="#ff00ff"
            android:textColorHint="#ff0000"
            android:textStyle="bold|italic"
            android:inputType="number"/>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter the CURRENT DATE "
        android:textSize="28sp"
        android:textStyle="bold|italic"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="60sp"
        android:textColor="#0000ff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.431"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.48" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="DAY"
            android:id="@+id/endday"
            android:layout_marginLeft="26sp"
            android:textSize="22sp"
            android:textColor="#ff00ff"
            android:textColorHint="#ff0000"
            android:textStyle="bold|italic"
            android:inputType="number"/>
        <EditText
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="MONTH"
            android:id="@+id/endmonth"
            android:layout_marginLeft="26sp"
            android:textSize="22sp"
            android:textColor="#ff00ff"
            android:textColorHint="#ff0000"
            android:textStyle="bold|italic"
            android:inputType="number"/>
        <EditText
            android:layout_marginTop="10sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="YEAR"
            android:id="@+id/endyear"
            android:layout_marginLeft="26sp"
            android:textSize="22sp"
            android:textColor="#ff00ff"
            android:textColorHint="#ff0000"
            android:textStyle="bold|italic"
            android:inputType="number"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="46sp"
        android:layout_marginTop="40sp"
        android:layout_marginLeft="30sp"
        android:layout_marginRight="60sp"
        android:textSize="24sp"
        android:text="FIND AGE"
        android:id="@+id/button"
        android:textAlignment="center"
        android:textColor="#ffffff"
        android:background="#ff0000"
        android:onClick="findAge"
        android:textStyle="bold|italic"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="The age is: "

        android:layout_marginTop="10sp"
        android:textStyle="italic|bold"
        android:textSize="22sp"
        android:id="@+id/textresult"
        android:layout_marginLeft="30sp"
        android:textColor="#00ff00"
        />


</LinearLayout>