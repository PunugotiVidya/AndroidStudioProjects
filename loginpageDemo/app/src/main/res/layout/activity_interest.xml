<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".interestActivity"
    android:paddingLeft="10sp"
    android:paddingTop="15sp"
    android:orientation="vertical"
    android:background="#000000"
    >


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Amount"
            android:textSize="24sp"
            android:layout_marginLeft="20sp"
            android:inputType="number"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
           android:textStyle="bold|italic"
            android:id="@+id/editAmount"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Rate"
            android:layout_marginLeft="20sp"
            android:textStyle="bold|italic"
            android:id="@+id/editRate"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:inputType="numberDecimal"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  Enter the Starting Date (dd/mm/yy)"
        android:textColorHint="@color/colorAccent"
        android:textStyle="bold|italic"
        android:layout_marginTop="20sp"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Day"
            android:textSize="24sp"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="20sp"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:inputType="number"
            android:id="@+id/editStartingDay"
            android:textStyle="bold|italic"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Month"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:textStyle="bold|italic"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:inputType="number"
            android:id="@+id/editStartingMonth"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Year"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:inputType="number"
            android:textColor="#ffffff"
            android:textStyle="bold|italic"
            android:textColorHint="#ffffff"
            android:textSize="24sp"
            android:id="@+id/editStartingYear"
            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="  Enter the Ending Date (dd/mm/yy)"
        android:textColorHint="@color/colorAccent"
        android:textStyle="bold|italic"
        android:layout_marginTop="20sp"
        android:textSize="20sp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Day"
            android:textSize="24sp"
            android:layout_marginTop="20sp"
            android:layout_marginLeft="20sp"
            android:inputType="number"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:textStyle="bold|italic"
            android:id="@+id/editEndingDay"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Month"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:textStyle="bold|italic"
            android:textSize="24sp"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:inputType="number"
            android:id="@+id/editEndingMonth"
            />
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Year"
            android:layout_marginLeft="20sp"
            android:layout_marginTop="20sp"
            android:inputType="number"
            android:textStyle="bold|italic"
            android:textColorHint="#ffffff"
            android:textColor="#ffffff"
            android:textSize="24sp"
            android:id="@+id/editEndingYear"
            />
    </LinearLayout>

    <Button
        android:id="@+id/buttonSI"
        android:layout_width="match_parent"
        android:layout_height="65sp"
        android:layout_marginTop="60sp"
        android:layout_marginRight="5dp"
        android:onClick="findInterest"
        android:text="Find SI"
        android:textSize="24sp"
        android:background="@drawable/buttonstyle"
        android:textColor="#ffffff"
        android:textStyle="bold|italic" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:text="Click here to know More Details"
        android:layout_marginLeft="60sp"
        android:textSize="18sp"
        android:background="@drawable/moreDetailsButtonStyle"
        android:textColor="#000000"
        android:onClick="clickForMoreDetails"
        android:textStyle="bold|italic"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
       android:text="   The Acutual Result is:  "
        android:textStyle="bold|italic"
        android:layout_marginLeft="10sp"
        android:layout_marginTop="60sp"
        android:textColor="#e9f712"
        android:id="@+id/textViewActualResult"/>


</LinearLayout>